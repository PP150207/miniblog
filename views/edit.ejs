<%- include('partials/header'); %>

<body>
    <div align=center>
        <div class='container update-page'>
            <form action="/update/<%= item.id %>" method="post" id='write-form'>
                <div><textarea type="text" name="itemname" class='textbox title-update' rows="1" id='textarea'><%= item.title %></textarea></div>
                <div><textarea type="text" name="itemName" class='textbox article-update'rows="8" id='textarea1'><%= item.article %></textarea></div>
                <div><input type="submit" value="Update" class='update-btn'></div>
            </form>
        </div>
        <div class='bottom-container' >
            <form action="/delete/<%= item.id %>" method="post">
            <div><input type='submit' value='Close' class='close-btn' onClick="return Check()"></div>
            </form>
        </div> 
    </div> 
    <script src="/js/edit.js"></script>
</body> 
